{
  "compilerOptions": {
    "target": "ESNext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "strict": true,

    "jsx": "react-jsx",
    "jsxImportSource": "kt.js",
    "plugins": [{ "name": "@ktjs/ts-plugin" }],

    "declaration": false,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["./src/**/*.ts", "*.config.ts", "./tests/**/*.ts", "./document/**/*.ts", "./document/**/*.tsx"],
  "exclude": ["**/dist/**/*.js", "**/dist/**/*.d.ts", "**/example/**/code/**"]
}

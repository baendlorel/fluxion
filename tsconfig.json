  },
  "include": ["./scripts/**/*.ts", "*.config.ts", "vitest.config.ts", "rollup.config.ts"],
  "exclude": ["**/dist/**/*.js", "**/dist/**/*.d.ts", "**/example/**/code/**"]
}
